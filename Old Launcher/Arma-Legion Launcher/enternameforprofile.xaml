<Window x:Class="PhoenixLoader.EnterNameForProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Namen für Profil eingeben" Height="304" Width="303" Icon="/PhoenixLoader;component/logo.ico">
  <Grid>
    <Button Click="btnAccept_Click" Name="btnAccept" Content="Annehmen" Height="23" HorizontalAlignment="Left"
            Margin="12,230,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox Name="textProfileName" Height="23" HorizontalAlignment="Left" Margin="12,27,0,0"
             VerticalAlignment="Top" Width="255"/>
    <Label Name="label1" Content="Bitte geben sie einen Namen für das Profil ein." Height="28"
           HorizontalAlignment="Left" Margin="12,4,0,0" VerticalAlignment="Top"/>
    <Button Click="btnAbort_Click" Name="btnAbort" Content="Abbrechen" Height="23" HorizontalAlignment="Left"
            Margin="194,0,0,12" VerticalAlignment="Bottom" Width="75"/>
    <ListBox Name="listAddons" Height="143" HorizontalAlignment="Left" Margin="12,81,0,0"
             VerticalAlignment="Top" Width="257"/>
    <Label Name="label2" Content="Ausgewählte Addons" Height="28" HorizontalAlignment="Left"
           Margin="12,57,0,0" VerticalAlignment="Top"/>
  </Grid>
</Window>